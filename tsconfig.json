{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es2015",
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "jsx": "react",
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "examples"]
}
